@model IEnumerable<KarlixID.Web.Models.ViewModels.TenantUserRow>
@{
    ViewData["Title"] = "Tenant korisnici";
    var tenants = (IEnumerable<dynamic>)(ViewBag.Tenants ?? Array.Empty<object>());
    string? q = ViewBag.FilterQ as string;
    Guid? tenantId = ViewBag.FilterTenantId as Guid?;
    bool onlyLocked = ViewBag.FilterOnlyLocked is bool b && b;
}
<h2 class="mb-3">@ViewData["Title"]</h2>


@if (ViewBag.FilterTenantId != null)
{
    <div class="alert alert-secondary py-2">
        Prikazani su samo korisnici odabranog tenanta.
        <a class="btn btn-sm btn-outline-secondary ms-2" asp-action="Index">Makni filter</a>
    </div>
}


<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input name="q" value="@q" class="form-control" placeholder="Traži po emailu / imenu..." />
    </div>
    <div class="col-md-4">
        <select name="tenantId" class="form-select">
            <option value="">-- Svi tenanti --</option>
            @foreach (var t in tenants)
            {
                var selected = tenantId.HasValue && tenantId.Value.ToString().Equals(t.Id.ToString(), StringComparison.OrdinalIgnoreCase);
                <option value="@t.Id" selected="@(selected ? "selected" : null)">@t.Name</option>
            }
        </select>
    </div>
    <div class="col-md-2 form-check d-flex align-items-center">
        <input class="form-check-input me-2" type="checkbox" id="onlyLocked" name="onlyLocked" value="true" @(onlyLocked ? "checked" : null) />
        <label class="form-check-label" for="onlyLocked">Samo zaključani</label>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100" type="submit">Filtriraj</button>
    </div>
</form>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Novi korisnik</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">Nema korisnika.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tenant</th>
                <th>Email</th>
                <th>Uloge</th>
                <th>Potvrđen</th>
                <th>Zaključan</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.TenantName</td>
                    <td>@u.Email</td>
                    <td>@u.RolesCsv</td>
                    <td>@(u.EmailConfirmed ? "Da" : "Ne")</td>
                    <td>@(u.LockedOut ? "Da" : "Ne")</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@u.Id">Uredi</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="EditRoles" asp-route-id="@u.Id">Uloge</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="ResetPassword" asp-route-id="@u.Id">Lozinka</a>
                        <a class="btn btn-sm btn-outline-warning" asp-action="ToggleLock" asp-route-id="@u.Id">@((u.LockedOut) ? "Otključaj" : "Zaključaj")</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
