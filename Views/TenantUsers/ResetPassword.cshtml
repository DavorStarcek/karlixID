@model KarlixID.Web.Controllers.ResetPasswordVM
@{
    ViewData["Title"] = "Reset lozinke";
}
<h2>Reset lozinke</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label class="form-label">Korisnik</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Nova lozinka</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Resetiraj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
