@model KarlixID.Web.Controllers.CreateTenantUserVM
@using KarlixID.Web.Models
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@using KarlixID.Web.Extensions

@{
    ViewData["Title"] = "Dodaj korisnika";
    var isGlobal = User.IsInRole(Roles.GlobalAdmin);
    var myTid = HttpCtx.HttpContext?.GetTenantId();
}

<h2>Dodaj korisnika</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @if (isGlobal)
    {
        <div class="mb-3">
            <label class="form-label">TenantId</label>
            <input asp-for="TenantId" class="form-control" />
            <div class="form-text">Ako prazno, neće proći (GlobalAdmin mora zadati TenantId).</div>
        </div>
    }
    else
    {
        <input type="hidden" name="TenantId" value="@myTid" />
    }

    <div class="mb-3">
        <label class="form-label">Privremena lozinka</label>
        <input asp-for="Password" class="form-control" />
        <div class="form-text">Ako ostaviš prazno, koristit će se: <code>TempPass123!</code></div>
    </div>

    <div class="form-check mb-3">
        <input asp-for="MakeTenantAdmin" class="form-check-input" />
        <label class="form-check-label">Učini korisnika TenantAdmin</label>
    </div>

    <button class="btn btn-primary" type="submit">Spremi</button>
    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
