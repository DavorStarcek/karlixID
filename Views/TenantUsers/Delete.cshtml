@{
    ViewData["Title"] = "Obriši korisnika";
    var email = ViewBag.UserEmail as string ?? "(n/a)";
    var id = ViewBag.UserId as string ?? "";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <div class="fw-bold">Jesi li siguran da želiš obrisati korisnika?</div>
    <div>Korisnik: <span class="fw-semibold">@email</span></div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Da, obriši</button>
        <a class="btn btn-secondary" asp-action="Index">Odustani</a>
    </div>
</form>
