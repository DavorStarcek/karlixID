@model KarlixID.Web.Models.ViewModels.EditRolesVM
@{
    ViewData["Title"] = "Uredi uloge";
}

<h2>@ViewData["Title"]</h2>
<p class="text-muted">Korisnik: <strong>@Model.Email</strong></p>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="card mb-3">
        <div class="card-header">Uloge</div>
        <div class="card-body">
            @if (Model.Roles == null || !Model.Roles.Any())
            {
                <div class="alert alert-info mb-0">Nema definiranih uloga.</div>
            }
            else
            {
                <div class="row">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        var id = $"Roles_{i}__Selected";
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" id="@id" asp-for="Roles[i].Selected" />
                                <label class="form-check-label" for="@id">@Model.Roles[i].Name</label>
                                <input type="hidden" asp-for="Roles[i].Name" />
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Spremi</button>
    <a asp-action="Index" class="btn btn-secondary">Natrag</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
