@model KarlixID.Web.Models.ViewModels.EditRolesVM
@{
    ViewData["Title"] = "Uredi uloge";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Korisnik</label>
            <input class="form-control" value="@Model.Email" disabled />
        </div>

        <form asp-action="EditRoles" method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label class="form-label">Uloge</label>

                @if (Model.AvailableRoles == null || !Model.AvailableRoles.Any())
                {
                    <div class="alert alert-warning">Nema dostupnih uloga.</div>
                }
                else
                {
                    foreach (var role in Model.AvailableRoles)
                    {
                        var isChecked = Model.SelectedRoles?.Contains(role, StringComparer.OrdinalIgnoreCase) ?? false;
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedRoles"
                                   value="@role"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label">@role</label>
                        </div>
                    }
                }
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Spremi</button>
                <a class="btn btn-secondary" asp-action="Index">Natrag</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
