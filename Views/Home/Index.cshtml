@using KarlixID.Web.Extensions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@{
    ViewData["Title"] = "Dobrodošli";
    var tname = HttpCtx.HttpContext?.GetTenantName();
}

<div class="text-center mt-5">
    <h1 class="display-5 mb-3">Dobrodošli u KarlixID</h1>
    <p class="lead text-muted">
        Centralni sustav za autentikaciju i upravljanje korisnicima unutar Karlix platforme.
    </p>

    @if (!string.IsNullOrWhiteSpace(tname))
    {
        <p class="mb-2">
            <span class="badge bg-secondary">🏷️ @tname</span>
        </p>
    }

    <p class="lead mb-4">Molimo prijavite se za nastavak.</p>

    <a class="btn btn-primary btn-lg"
       asp-area="Identity"
       asp-page="/Account/Login">
        Prijava
    </a>
</div>
