@model List<KarlixID.Web.Models.Tenant>

<h2>Tenanti (test)</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Nema zapisa u tablici Tenants.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Hostname</th>
                <th>Aktivan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Name</td>
                    <td>@t.Hostname</td>
                    <td>@t.IsActive</td>
                </tr>
            }
        </tbody>
    </table>
}
