@{
    ViewData["Title"] = "Dobrodošli";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
}

<div class="py-4">
    <h1 class="display-6 mb-3">Dobrodošli u KarlixID</h1>
    <p class="text-muted">Centralni sustav za autentikaciju i upravljanje korisnicima unutar Karlix platforme.</p>

    @if (!isAuth)
    {
        <div class="mt-4">
            <p class="mb-3">Molimo prijavite se za nastavak.</p>
            <a class="btn btn-primary btn-lg"
               asp-area="Identity"
               asp-page="/Account/Login">Prijava</a>
        </div>
    }
    else
    {
        <div class="alert alert-success mt-4 mb-4">
            Uspješno ste prijavljeni kao <strong>@User?.Identity?.Name</strong>.
        </div>

        <div class="row g-3">
            @* Korisnici — dostupno GlobalAdmin i TenantAdmin *@
            @if (User.IsInRole(KarlixID.Web.Models.AppRoleInfo.GlobalAdmin) || User.IsInRole(KarlixID.Web.Models.AppRoleInfo.TenantAdmin))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Korisnici</h5>
                            <p class="card-text">Upravljanje korisnicima unutar tenanta.</p>
                            <a class="btn btn-outline-primary" asp-controller="TenantUsers" asp-action="Index">Otvori</a>
                        </div>
                    </div>
                </div>
            }

            @* Tenanti — samo GlobalAdmin *@
            @if (User.IsInRole(KarlixID.Web.Models.AppRoleInfo.GlobalAdmin))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Tenanti</h5>
                            <p class="card-text">Pregled i administracija tenantima.</p>
                            <a class="btn btn-outline-primary" asp-controller="Tenants" asp-action="Index">Otvori</a>
                        </div>
                    </div>
                </div>
            }

            @* NOVO: Pozivnice — GlobalAdmin i TenantAdmin *@
            @if (User.IsInRole(KarlixID.Web.Models.AppRoleInfo.GlobalAdmin) || User.IsInRole(KarlixID.Web.Models.AppRoleInfo.TenantAdmin))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Pozivnice</h5>
                            <p class="card-text">Slanje, pregled i upravljanje pozivnicama.</p>
                            <a class="btn btn-outline-primary" asp-controller="Invite" asp-action="Index">Otvori</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
