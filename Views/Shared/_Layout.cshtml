@using Microsoft.AspNetCore.Identity
@using KarlixID.Web.Models
@using KarlixID.Web.Extensions
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KarlixID</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Naša tema -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="theme-karlix d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KarlixID</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                    aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                var currentController = (ViewContext.RouteData.Values["controller"] as string) ?? "";
                var currentAction = (ViewContext.RouteData.Values["action"] as string) ?? "";
                string Active(string ctrl, string? act = null) =>
                (string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
                (act == null || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase)))
                ? "active" : "";
            }

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @Active("Home", "Index")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @* Link vidljiv adminima (GlobalAdmin ili TenantAdmin) *@
                    @if (User.IsInRole(AppRoleInfo.GlobalAdmin) || User.IsInRole(AppRoleInfo.TenantAdmin))
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("TenantUsers", "Index")" asp-controller="TenantUsers" asp-action="Index">Korisnici</a>
                        </li>
                    }

                    @* Tenanti samo GlobalAdmin *@
                    @if (User.IsInRole(AppRoleInfo.GlobalAdmin))
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("Tenants", "Index")" asp-controller="Tenants" asp-action="Index">Tenanti</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @* Tenant badge *@
                    @{
                        var tname = HttpCtx.HttpContext?.GetTenantName();
                    }
                    @if (!string.IsNullOrWhiteSpace(tname))
                    {
                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="badge badge-tenant">🏷️ @tname</span>
                        </li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var displayName =
                        User.Claims.FirstOrDefault(c => c.Type == "name")?.Value
                        ?? User.Claims.FirstOrDefault(c => c.Type == "display_name")?.Value
                        ?? User.Identity?.Name;

                        <li class="nav-item d-flex align-items-center">
                            <span class="navbar-text me-2">@displayName</span>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Odjava</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("", "")" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container mt-4">
            @if (TempData["Ok"] is string okMsg && !string.IsNullOrWhiteSpace(okMsg))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @okMsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            }
            @if (TempData["Err"] is string errMsg && !string.IsNullOrWhiteSpace(errMsg))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errMsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="text-center mt-4 py-3 border-top">
        <p class="text-muted mb-0">&copy; @DateTime.Now.Year - KarlixID</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
