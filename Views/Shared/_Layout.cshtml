@using Microsoft.AspNetCore.Identity
@using KarlixID.Web.Models
@using KarlixID.Web.Extensions
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx

@functions {
    // Privremeni provider branda po tenant-u (po imenu); lako kasnije prebacimo u DB.
    (string Brand, string Brand600) GetBrandForTenant(string? tenantName)
    {
        if (string.IsNullOrWhiteSpace(tenantName))
            return ("#0d6efd", "#0b5ed7"); // default Bootstrap plava

        // Primjeri — promijeni po želji:
        // "Tenant Local" -> zelena; "PIK Vrbovec plus d.o.o." -> crvena
        switch (tenantName.Trim().ToLowerInvariant())
        {
            case "tenant local":
                return ("#10b981", "#059669"); // emerald 500 / 600
            case "pik vrbovec plus d.o.o.":
                return ("#ef4444", "#dc2626"); // red 500 / 600
            default:
                return ("#0d6efd", "#0b5ed7"); // fallback
        }
    }
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KarlixID</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon-180.png" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Preload teme iz localStorage (bez treptanja) -->
    <script>
        (function () {
            try {
                var t = localStorage.getItem('karlix-theme');
                if (t === 'dark') document.documentElement.classList.add('theme-dark');
            } catch { }
        })();
    </script>
</head>
@{
        var tname = HttpCtx.HttpContext?.GetTenantName();
        // fallback i iz claim-ova ako imaš custom claim "tenant_name"
        tname = string.IsNullOrWhiteSpace(tname)
                ? (User?.Claims?.FirstOrDefault(c => c.Type == "tenant_name")?.Value)
                : tname;

        var (brand, brand600) = GetBrandForTenant(tname);
}
<body class="theme-karlix d-flex flex-column min-vh-100"
      style="--brand:@brand; --brand-600:@brand600;">
    <nav class="navbar navbar-expand-sm app-navbar">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.svg" alt="KarlixID" width="24" height="24" />
                <span>KarlixID</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                    aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                var currentController = (ViewContext.RouteData.Values["controller"] as string) ?? "";
                var currentAction = (ViewContext.RouteData.Values["action"] as string) ?? "";
                string Active(string ctrl, string? act = null) =>
                (string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
                (act == null || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase)))
                ? "active" : "";
            }

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @Active("Home", "Index")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (User.IsInRole(AppRoleInfo.GlobalAdmin) || User.IsInRole(AppRoleInfo.TenantAdmin))
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("TenantUsers", "Index")" asp-controller="TenantUsers" asp-action="Index">Korisnici</a>
                        </li>
                    }

                    @if (User.IsInRole(AppRoleInfo.GlobalAdmin))
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("Tenants", "Index")" asp-controller="Tenants" asp-action="Index">Tenanti</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav align-items-center">
                    @if (!string.IsNullOrWhiteSpace(tname))
                    {
                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="badge badge-tenant">🏷️ @tname</span>
                        </li>
                    }

                    <li class="nav-item me-2">
                        <button id="themeToggle" class="btn btn-outline-secondary btn-sm" type="button" aria-label="Promijeni temu">
                            <i class="bi bi-moon-stars" id="themeIcon"></i>
                        </button>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var displayName =
                        User.Claims.FirstOrDefault(c => c.Type == "name")?.Value
                        ?? User.Claims.FirstOrDefault(c => c.Type == "display_name")?.Value
                        ?? User.Identity?.Name;

                        <li class="nav-item d-flex align-items-center">
                            <span class="navbar-text me-2">@displayName</span>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Odjava</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("", "")" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container mt-4">
            @if (TempData["Ok"] is string okMsg && !string.IsNullOrWhiteSpace(okMsg))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @okMsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            }
            @if (TempData["Err"] is string errMsg && !string.IsNullOrWhiteSpace(errMsg))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errMsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="text-center mt-4 py-3 app-footer">
        <p class="text-muted mb-0">&copy; @DateTime.Now.Year - KarlixID</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
