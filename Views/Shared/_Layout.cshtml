@using KarlixID.Web.Extensions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@using KarlixID.Web.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KarlixID.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KarlixID.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KarlixID.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @* ---- Link vidljiv samo adminima (GlobalAdmin ili TenantAdmin) ---- *@
                        @if (User.IsInRole(AppRoleInfo.GlobalAdmin) || User.IsInRole(AppRoleInfo.TenantAdmin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="TenantUsers" asp-action="Index">Korisnici</a>
                            </li>
                        }

                        @* ---- Link na Tenants (test) - samo GlobalAdmin ---- *@
                        @if (User.IsInRole(AppRoleInfo.GlobalAdmin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Tenants" asp-action="Index">Tenanti (test)</a>
                            </li>
                        }
                    </ul>

                    @* 👇 Tenant badge i login desno u navbaru *@
                    @{
                        var tname = HttpCtx.HttpContext?.GetTenantName();
                    }
                    <div class="d-flex align-items-center me-2">
                        @if (!string.IsNullOrWhiteSpace(tname))
                        {
                            <span class="badge bg-secondary">🏷️ @tname</span>
                        }
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Err"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
            @err
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KarlixID.Web -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
