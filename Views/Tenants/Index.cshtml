@model IEnumerable<KarlixID.Web.Models.Tenant>
@{
    ViewData["Title"] = "Tenanti";
    var q = ViewBag.FilterQ as string ?? "";
    var onlyActive = (bool?)ViewBag.OnlyActive ?? false;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2 align-items-center">
        <!-- search -->
        <div class="col-sm-6 col-md-5 col-lg-4">
            <input name="q"
                   value="@q"
                   class="form-control"
                   placeholder="Traži po nazivu / hostu…" />
        </div>

        <!-- samo aktivni -->
        <div class="col-sm-3 col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="onlyActive" name="onlyActive"
                       value="true" @(onlyActive ? "checked" : "") />
                <label class="form-check-label" for="onlyActive">Samo aktivni</label>
            </div>
            <input type="hidden" name="onlyActive" value="false" />
        </div>

        <!-- gumbi filtriraj/poništi -->
        <div class="col-sm-3 col-md-3 col-lg-3">
            <button type="submit" class="btn btn-primary me-2">Filtriraj</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Poništi</a>
        </div>
    </div>

    <!-- Dodaj tenanta ispod -->
    <div class="row mt-3">
        <div class="col-auto">
            <a class="btn btn-success" asp-action="Create">+ Dodaj tenanta</a>
        </div>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">Nema zapisa.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Naziv</th>
                    <th>Hostname</th>
                    <th style="width:100px;">Aktivan</th>
                    <th style="width:220px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Name</td>
                        <td class="text-muted">@t.Hostname</td>
                        <td>@(t.IsActive ? "Da" : "Ne")</td>
                        <td class="text-nowrap">
                            <a class="btn btn-sm btn-outline-secondary me-1"
                               asp-action="Edit" asp-route-id="@t.Id">Uredi</a>

                            <form asp-action="ToggleActive" asp-route-id="@t.Id"
                                  method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-sm @(t.IsActive ? "btn-outline-warning" : "btn-outline-success") me-1">
                                    @(t.IsActive ? "Deaktiviraj" : "Aktiviraj")
                                </button>
                            </form>

                            <form asp-action="Delete" asp-route-id="@t.Id"
                                  method="post" class="d-inline"
                                  onsubmit=@($"return confirm('Obrisati tenant {t.Name}?');")>
                                <button type="submit" class="btn btn-sm btn-outline-danger">Obriši</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
