@model IEnumerable<KarlixID.Web.Models.Tenant>
@{
    ViewData["Title"] = "Tenanti";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Nema zapisa u tablici Tenants.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Hostname</th>
                <th>Aktivan</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td class="text-muted">@t.Id</td>
                    <td>@t.Name</td>
                    <td>@t.Hostname</td>
                    <td>@(t.IsActive ? "Da" : "Ne")</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Tenants"
                           asp-action="Edit"
                           asp-route-id="@t.Id">Uredi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
