@model IEnumerable<KarlixID.Web.Models.Tenant>
@{
    ViewData["Title"] = "Tenanti";
    var q = ViewBag.FilterQ as string;
    var onlyActive = (bool)(ViewBag.FilterOnlyActive ?? false);
    var isGlobal = User.IsInRole(KarlixID.Web.Models.AppRoleInfo.GlobalAdmin);
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    @* desno gumb kao na korisnicima *@
    @if (isGlobal)
    {
        <a class="btn btn-primary" asp-action="Create">+ Novi tenant</a>
    }
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6 col-lg-5">
        <input name="q"
               value="@(q ?? "")"
               class="form-control"
               placeholder="Traži po nazivu / hostu..." />
    </div>

    <div class="col-md-3 col-lg-3 d-flex align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="onlyActive" value="true" id="onlyActive" @(onlyActive ? "checked" : "") />
            <label class="form-check-label" for="onlyActive">Samo aktivni</label>
        </div>
    </div>

    <div class="col-md-3 col-lg-4">
        <button type="submit" class="btn btn-outline-secondary">Primijeni</button>
        <a class="btn btn-link" asp-action="Index">Reset</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">Nema zapisa.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Hostname</th>
                <th>Aktivan</th>
                @if (isGlobal)
                {
                    <th class="text-end">Akcije</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.Hostname</td>
                    <td>@(t.IsActive ? "Da" : "Ne")</td>

                    @if (isGlobal)
                    {
                        <td class="text-end text-nowrap">
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Edit" asp-route-id="@t.Id">Uredi</a>

                            <form asp-action="ToggleActive" asp-route-id="@t.Id"
                                  method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-sm @(t.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                    @(t.IsActive ? "Deaktiviraj" : "Aktiviraj")
                                </button>
                            </form>

                            <form asp-action="Delete" asp-route-id="@t.Id"
                                  method="post" class="d-inline"
                                  onsubmit=@($"return confirm('Obrisati tenant {t.Name}?');")>
                                <button type="submit" class="btn btn-sm btn-outline-danger">Obriši</button>
                            </form>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
