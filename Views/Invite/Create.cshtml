@model KarlixID.Web.Models.ViewModels.InviteCreateVM
@{
    ViewData["Title"] = "Pozovi korisnika";
    var tenants = (IEnumerable<dynamic>)(ViewBag.Tenants ?? Array.Empty<object>());
    var roles = (IEnumerable<string>)(ViewBag.Roles ?? Array.Empty<string>());
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="card p-3">
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Tenant</label>
            <select asp-for="TenantId" class="form-select">
                <option value="">(bez tenanta – global)</option>
                @foreach (var t in tenants)
                {
                    <option value="@t.Id">@t.Name</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Uloga (opcionalno)</label>
            <select asp-for="RoleName" class="form-select">
                <option value="">(bez uloge)</option>
                @foreach (var r in roles)
                {
                    <option value="@r">@r</option>
                }
            </select>
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="ValidDays" class="form-label"></label>
        <input asp-for="ValidDays" class="form-control" />
        <span asp-validation-for="ValidDays" class="text-danger"></span>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Pošalji pozivnicu</button>
        <a asp-controller="TenantUsers" asp-action="Index" class="btn btn-outline-secondary">Natrag</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
